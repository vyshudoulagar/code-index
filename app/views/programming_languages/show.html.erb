<div class="container mt-5">
  <p class="text-success"><%= notice %></p>

  <h1 class="mb-4"><%= @programming_language.title %></h1>

  <div class="card mb-4">
    <div class="card-body">
      <p class="card-text">
        <strong>Description:</strong> <%= @programming_language.description %>
      </p>
      <p class="card-text">
        <strong>Link:</strong> <%= link_to "Official Site", @programming_language.link, target: '_blank' %>
      </p>
    </div>
  </div>

  <div class="d-flex justify-content-between">
    <div>
      <%= link_to "Edit this programming language", edit_programming_language_path(@programming_language), class: "btn btn-secondary me-2" %>
      <%= link_to "Back to programming languages", programming_languages_path, class: "btn btn-primary" %>
    </div>
    <div>
      <%= button_to "Destroy this programming language", @programming_language, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
    </div>
  </div>
</div>
